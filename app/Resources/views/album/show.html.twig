{% extends 'base.html.twig' %}

{% block body %}
    <h1>Images</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Path</th>
            <th>Url</th>
            <th>Width</th>
            <th>Height</th>
            <th>Created</th>
        </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td>{{ image.path }}</td>
                <td>{{ image.url }}</td>
                <td>{{ image.width }}</td>
                <td>{{ image.height }}</td>
                <td>{% if image.created %}{{ image.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
